@{
    ViewBag.Title = "Home Page";
}

<head>
    <link href="~/Content/AdminSidemenu.css" rel="stylesheet" />
    <link href="~/Content/CustomRibbonMenu.css" rel="stylesheet" />
    <link href="~/Content/ninja-slider.css" rel="stylesheet" />
    <script src="~/Scripts/ninja-slider.js"></script>
</head>


<div class="form-group col-md-12" style="clear:both;">
            <ul>
                @if (Session["accountID"] == null)
                {
            <li type="submit" class="btn btn-default" style="float:right;"> @Html.ActionLink("Login", "Login", "Account")</li> }
                else {
            <li type="submit" class="btn btn-default"> @Html.ActionLink("Logout", "Logout", "Account")</li> }
            </ul>
        </div>

    <!-- Start Ribbon menu -->
    <div class="col-md-12">
        <div class='ribbon'>
            <div id="horizontalmenu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Html.ActionLink("Store", "Index", "Home")
                        <ul>
                            <li>@Html.ActionLink("Parquet", "Parquet", "Product")</li>
                            <li>@Html.ActionLink("Laminate", "Laminate", "Product")</li>
                            <li>@Html.ActionLink("Vinyl", "Vinyl", "Product")</li>
                            <li>@Html.ActionLink("Plinth", "Plinths", "Product")</li>
                            <li>@Html.ActionLink("Profile", "Profiles", "Product")</li>
                            <li>@Html.ActionLink("Glue", "Glue", "Product")</li>
                            <li>@Html.ActionLink("Isolation", "Isolation", "Product")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Offer", "Offer", "Offer")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Ribbon menu -->


    @using (Html.BeginForm())
    {           
        <!-- start Slider -->
        <div id="ninja-slider">
            <div class="slider-inner">
                <ul>
                    <li>
                        <img class="ns-img" src="~/images/ra7.png" />
                        <div class="caption">WoodStore</div>
                    </li>
                    <li>
                        <img class="ns-img" src="~/images/ra4.png" />
                        <div class="caption">WoodStore</div>
                    </li>
                    <li>
                        <img class="ns-img" style="cursor:pointer;" src="~/images/ra12.jpg" />
                        <div class="caption">WoodStore</div>
                    </li>
                    <li>
                        <img class="ns-img" src="~/images/ra9.png" />
                        <div class="caption cap1">RESPONSIVE</div>
                        <div class="caption cap1 cap2">TOUCH·FRIENDLY</div>
                        <div class="caption">WoodStore</div>
                    </li>
                </ul>
                <div class="fs-icon" title="Expand/Close"></div>
            </div>
        </div>
    <!-- end Slider -->


    }
