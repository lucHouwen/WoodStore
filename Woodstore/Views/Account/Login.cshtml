            @Html.LabelFor(model => model.Password, "Password:", new { @class = "labelLogin", id = "password-status" })
            <input type="password" name="password" placeholder="Password" data-validation="req len:1-50">

            <div>
                <input type="checkbox" value="checked" id="" name="checkbox" />
                <label>Remember Me</label>
            </div>
            <div>
                <button class="buttonLogin">Login</button>
            </div>
            <br />
            <br />

            <p> &nbsp; &nbsp; &nbsp; &nbsp; @Html.ActionLink("Register", "Register") &nbsp; &nbsp; &nbsp; &nbsp; @Html.ActionLink("Lost Password", "LostPassword")</p>

        </div>
       
